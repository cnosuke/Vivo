.logo
  %h1
    Vivo by cnosuke

- if current_user
  .avatar
    = image_tag current_user.avatar_url, alt: current_user.nickname, size: '50x50'
  .user_nickname
    = current_user.nickname
  .sign_out
    = link_to 'Sign out', signout_path
- else
  .sign_in
    = link_to 'Sign in with Github', '/auth/github'

.notice
  = flash[:notice]
